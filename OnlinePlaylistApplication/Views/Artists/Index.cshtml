@model IEnumerable<Assignment7.Controllers.ArtistBase>

@{
    ViewBag.Title = "Artist list";
}

<h2>Artist list</h2>

<p>
    @Html.ActionLink("Create new artist", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthOrStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrlArtist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Executive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Profile)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthOrStartDate)
        </td>
        <td>
            <img src="@item.UrlArtist" alt="" style="width: 100px;" />
            @*@Html.DisplayFor(modelItem => item.UrlArtist)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Executive)
        </td>
        <td>
            <div class="panel panel-default panel-body">
                @Html.Raw(item.Profile)
            </div>
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("With media", "DetailsWithMediaInfo", new { id = item.Id }) |@*|
         @Html.ActionLink("With media", "DetailsWithMediaInfo", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
